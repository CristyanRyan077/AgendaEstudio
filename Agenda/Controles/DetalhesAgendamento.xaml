<UserControl x:Class="AgendaNovo.Controles.DetalhesAgendamento"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgendaNovo.Controles" xmlns:models="clr-namespace:AgendaNovo.Models" xmlns:agendanovo="clr-namespace:AgendaNovo" xmlns:hc="https://handyorg.github.io/handycontrol" d:DataContext="{d:DesignInstance Type=agendanovo:AgendaViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="Black" Grid.ColumnSpan="3" CornerRadius="12" Padding="20">
            <StackPanel >
                <!-- Cabeçalho -->
                <TextBlock Text="{Binding SelectedAgendamento.Cliente.Nome}"
                   FontSize="22" FontWeight="Bold"
                   Foreground="White"/>

                <!-- Dados principais -->
                <StackPanel>
                    <TextBlock Foreground="#AAA" Text="Informações do Agendamento"
                       FontSize="14" Margin="0,0,0,5"/>
                    <Border Background="#FF2D2D2D" CornerRadius="8" Padding="10">
                        <UniformGrid Columns="1" Rows="3">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Criança:"  Foreground="#AAA" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding SelectedAgendamento.Crianca.Nome}"  Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Serviço:" Foreground="#AAA" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding SelectedAgendamento.Servico.Nome}" Margin="0,0,10,0" Foreground="White"/>
                                <TextBlock Text="{Binding SelectedAgendamento.Pacote.Nome}" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Data:" FontWeight="Bold" Foreground="#AAA" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding SelectedAgendamento.Data, StringFormat=dd/MM/yyyy}" Foreground="White"/>
                            </StackPanel>
                        </UniformGrid>
                    </Border>
                </StackPanel>

                <!-- Observações -->
                <StackPanel>
                    <TextBlock Foreground="#AAA" Text="Observações" FontSize="14"/>
                    <hc:TextBox Text="{Binding SelectedAgendamento.Cliente.Observacao}"
                        Background="#FF2D2D2D"
                        Foreground="White"
                        BorderBrush="#444"
                        Padding="8" Margin="0,0,0,20"
                        AcceptsReturn="True"
                        IsReadOnly="True"
                        TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Pagamentos -->
                <StackPanel>
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Pagamentos" DockPanel.Dock="Left"
                           FontSize="16" FontWeight="Bold"
                           Foreground="White"/>
                        <Button Content="Adicionar" Grid.Column="3" DockPanel.Dock="Right"
                        Command="{Binding AbrirPagamentosCommand}"
                        CommandParameter="{Binding SelectedAgendamento}"
                        Background="#2D89EF"
                        Foreground="White"
                        Padding="6,3"         Click="Testar_Click"
                        BorderThickness="0"
                        />
                    </DockPanel>

                    <Border Background="#FF2D2D2D">
                        <DataGrid ItemsSource="{Binding Historico}" Focusable="False" Margin="10" AutoGenerateColumns="False" HeadersVisibility="Column" Background="#FFF" BorderBrush="#DDD" BorderThickness="1" RowHeight="35" ColumnHeaderHeight="40" FontSize="14" FontFamily="Segoe UI" GridLinesVisibility="None" RowBackground="#FAFAFA" AlternatingRowBackground="#F0F0F0" SnapsToDevicePixels="True">
                            <DataGrid.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </DataGrid.Effect>
                            <DataGrid.Resources>
                                <!-- Cabeçalhos -->
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2D89EF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                                <!-- Linhas -->
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                    <Setter Property="ToolTip" Value="Clique para selecionar esta linha"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#BBDEFB"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat=dd/MM/yyyy}" Width="100"/>
                                <DataGridTextColumn Header="Metodo" Binding="{Binding Metodo}" Width="auto"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="80"/>
                                <DataGridTextColumn Header="Desc" Binding="{Binding Descricao}" Width="auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>




    </Grid>
</UserControl>
