<UserControl x:Class="AgendaNovo.Controles.PopupNotificacao"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgendaNovo.Controles" xmlns:viewmodels="clr-namespace:AgendaNovo.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:NotificacaoViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#FF333333" CornerRadius="10" Padding="10"
        Visibility="{Binding PopupVisivel, Converter={StaticResource BoolToVisibilityConverter}}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel>
                <TextBlock Text="Notificações" Foreground="White" FontWeight="Bold" FontSize="14" DockPanel.Dock="Left"/>
                <Button Content="X" Foreground="Black" Width="20" Height="20" Margin="5,0,0,0"
                    Background="Red" HorizontalAlignment="Right" Command="{Binding FecharPopupCommand}"/>
            </DockPanel>

            <StackPanel Grid.Row="1" Margin="0,8,0,0">
                <TextBlock Text="{Binding CountHojeEAmanha, StringFormat='Clientes hoje/amanhã: {0}'}"
                       Foreground="White" FontWeight="Bold" FontSize="13"
                       HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding CountFotos, StringFormat='Fotos atrasadas: {0}'}"
                       Foreground="White" FontWeight="Bold" FontSize="13"
                       HorizontalAlignment="Center" Margin="0,2,0,0"/>

                <Button Content="Ver detalhes"
                    Command="{Binding AbrirDetalhesCommand}"
                    Margin="0,10,0,0" Padding="5"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
