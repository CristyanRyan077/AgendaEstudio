<UserControl x:Class="AgendaNovo.Controles.AddServico"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgendaNovo.Controles"
             mc:Ignorable="d" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:vm="clr-namespace:AgendaNovo" xmlns:viewmodels="clr-namespace:AgendaNovo.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:AdicionarServicoPacoteViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock  Text="Adicionar Servico e Pacote" FontSize="22" Margin="0,30,0,0"
                   FontFamily="Segoe UI" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top"
                   />


        <StackPanel Orientation="Horizontal" Margin="0,60,0,0" VerticalAlignment="Center">

            <hc:TextBox hc:InfoElement.Placeholder="Servico"
                        Width="300" Height="60" FontFamily="#heveltica" FontSize="22"
                        Text="{Binding NovoServico}"
                        Background="White"
                        Foreground="Black"/>
        <hc:TextBox hc:InfoElement.Placeholder="Pacote" 
                    Width="200" Height="60" FontFamily="#heveltica" FontSize="22"
                    Text="{Binding NovoPacote}"
                    Background="White"
                    Foreground="Black"/>
                    </StackPanel>
        <TextBlock Grid.Row="0" VerticalAlignment="Bottom" FontSize="22" Text="Digite o valor"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Top" Orientation="Horizontal">
            <hc:TextBox hc:InfoElement.Placeholder="Valor"
                        Width="200" Height="60" FontFamily="#heveltica" FontSize="22"
                        Text="{Binding Valor}" VerticalAlignment="Top"
                        Background="White" Margin="0,0,0,0"
                        Foreground="Black"/>
            <CheckBox IsChecked="{Binding PossuiCrianca}" VerticalAlignment="Center" Content="Possui Crianca?" Margin="10,0,0,0"/>
            

        </StackPanel>
        <Button Grid.Row="1" Content="Salvar" Command="{Binding SalvarCommand}" Background="Green" Width="120" Height="30"/>
    </Grid>
    
</UserControl>
