<Window x:Class="AgendaNovo.Views.Calendario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:AgendaNovo.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:models="clr-namespace:AgendaNovo.Models"
        xmlns:conv="clr-namespace:AgendaNovo.Converters"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgendaNovo.Views"
        xmlns:controles="clr-namespace:AgendaNovo.Controles"
        mc:Ignorable="d" MinHeight="900" MinWidth="1200"
        d:DataContext="{d:DesignInstance Type=vm:CalendarioViewModel}"
        WindowState="Maximized"
        Title="Calendario">

    <Grid Background="#FF333333">

        <ScrollViewer CanContentScroll="True">
           
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="2"  Grid.Column="2"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Bottom"
                      Margin="0,0,80,40">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Revelado" Foreground="White"
                         GroupName="FiltroClientes"
                         Margin="10,0,0,0"
                         IsChecked="{Binding FiltroSelecionado,
                         ConverterParameter=Revelado,
                         Converter={StaticResource StringEqualsConverter}}" />
                        <RadioButton Content="Entregue" Foreground="White"
                         GroupName="FiltroClientes"
                         Margin="10,0,0,0"
                         IsChecked="{Binding FiltroSelecionado,
                         ConverterParameter=Entregue,
                         Converter={StaticResource StringEqualsConverter}}" />
                    </StackPanel>
                </Grid>


                <Grid Grid.Row="2" Margin="0,0,40,0" Grid.Column="2" VerticalAlignment="Bottom">
          
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton Content="Todos"
                                 GroupName="FiltroClientes" Foreground="White"
                                 IsChecked="{Binding FiltroSelecionado, ConverterParameter=Todos,
                                            Converter={StaticResource StringEqualsConverter}}" />

                        <RadioButton Content="Concluidos" Foreground="Green"
                                     GroupName="FiltroClientes"
                                     Margin="10,0,0,0"
                                     IsChecked="{Binding FiltroSelecionado, ConverterParameter=Concluido,
                                                Converter={StaticResource StringEqualsConverter}}" />

                        <RadioButton Content="Pendentes" Foreground="DarkRed"
                                     GroupName="FiltroClientes"
                                     Margin="10,0,0,0"
                                     IsChecked="{Binding FiltroSelecionado, ConverterParameter=Pendente,
                                                Converter={StaticResource StringEqualsConverter}}" />

                    </StackPanel>

                    <hc:TextBox hc:InfoElement.Placeholder="Buscar por nome"
                     Height="32" Width="350" Background="White" HorizontalAlignment="Left"
                     Text="{Binding TextoPesquisa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderBrush="Black"
                     />
                </Grid>
                <ToolBarTray Grid.Row="0" Grid.Column="2" Margin="0,0,20,0" HorizontalAlignment="Right">
                    <ToolBar Height="70"  Background="DarkGray">
                        <Button x:Name="btnMainwindow" Padding="2" Margin="0,0,5,0" Width="60" Click="btnMainwindow_Click"
                                Height="60" BorderBrush="Black" FontSize="15">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="ArrowBack" Height="32" Width="55"/>
                                <TextBlock Margin="5,0,0,0" FontWeight="Bold" Foreground="Gray">Voltar</TextBlock>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnAgenda" Padding="4" Click="btnAgenda_Click"
                     Height="60" BorderBrush="Black" BorderThickness="1" FontSize="14">
                            <StackPanel>
                                <materialDesign:PackIcon Height="32" Width="55" Kind="BookAdd"/>
                                <TextBlock FontWeight="Bold" Foreground="Blue">Agendar</TextBlock>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnClientes" Padding="4" Click="btnClientes_Click"
                     Height="60" Margin="5,0,0,0" BorderBrush="Black" FontSize="14">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="UserAdd" Height="32" Width="55"/>
                                <TextBlock FontWeight="Bold" Foreground="Red">Clientes</TextBlock>
                            </StackPanel>
                        </Button>



                    </ToolBar>
                </ToolBarTray>


                <DataGrid
                    Grid.Row="4" Grid.ColumnSpan="5" Grid.Column="0"
                    Height="350"
                    ItemsSource="{Binding AgendamentosFiltrados, Mode=TwoWay}"
                    SelectedItem="{Binding AgendamentoSelecionado, Mode=TwoWay}"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    MouseDoubleClick="DataGrid_MouseDoubleClick"
                    HeadersVisibility="Column"
                    RowHeaderWidth="0"
                    GridLinesVisibility="None"  
                    Background="#333"
                    Foreground="White"
                    BorderThickness="0"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    AlternationCount="2">

                    <DataGrid.Resources>

                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#444"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="6,4"/>
                        </Style>
                        <!-- Estilo das linhas -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="AlternationIndex" Value="1">
                                    <Setter Property="Background" Value="#3C3C3C"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#555"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#666"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" />
                        <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                        <DataGridTextColumn Header="Horário" Binding="{Binding Horario, StringFormat=\{0:hh\\:mm\}}" Width="60"/>
                        <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente.Nome}"  />
                        <DataGridTextColumn Header="Telefone" Binding="{Binding Cliente.Telefone}" Width="100"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Cliente.Email}" Width="100"/>
                        <DataGridTextColumn Header="Criança" Binding="{Binding Crianca.Nome}" Width="100"/>
                        <DataGridTextColumn Header="Serviço" Binding="{Binding Servico.Nome}" Width="100"/>
                        <DataGridTextColumn Header="Tema" Binding="{Binding Tema}" Width="100"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                        <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=R$ {0:N2}}" Width="80"/>
                        <DataGridTemplateColumn Header="Pago">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ValorPago, StringFormat=R$ {0:N2}}"
                                     FontWeight="Bold" FontSize="13" FontFamily="Helvetica">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Red" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding EstaPago}" Value="True">
                                                        <Setter Property="Foreground" Value="Green" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Fotos" Binding="{Binding Fotos}"/>
                        <DataGridTextColumn Header="Observação" Width="200" Binding="{Binding Cliente.Observacao}"/>
                    </DataGrid.Columns>
                </DataGrid>


                <!-- Navegação -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="0,20,0,0"  Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Button Command="{Binding VoltarMesCommand}" Content="◀" Margin="0,0,0,0"/>
                    <TextBlock Text="{Binding MesAtual,Converter={StaticResource MesAnoPtBrConverter},  StringFormat={}{0:MMMM yyyy}}"                          
                           Width="130"
                           Foreground="White" FontWeight="Bold"
                           FontSize="18" VerticalAlignment="Center" Margin="30,0,30,0"/>
                    <Button Command="{Binding AvancarMesCommand}" Content="▶"/>
                </StackPanel>

                <!-- Cabeçalho dos dias -->
                <ItemsControl Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" ItemsSource="{Binding DiasSemana}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid  VerticalAlignment="Top" Rows="1" Columns="7"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border 
                                BorderBrush="Transparent" 
                                BorderThickness="1"
                                Margin="1" 
                                Padding="0">
                                <TextBlock 
                                Text="{Binding}" 
                                Foreground="White"
                                TextAlignment="Center"
                                VerticalAlignment="Center"
                                FontWeight="Bold"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Dias do mês -->
                <ItemsControl Grid.Row="2" Margin="0,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="4" Foreground="White" ItemsSource="{Binding DiasDoMes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:DiaCalendario}">
                            <Border x:Name="AgBorder" Height="110"   Background="#FF484848"
                                    AllowDrop="True"
                                    PreviewDragLeave="Dia_PreviewDragLeave"
                                    PreviewDragOver="Dia_PreviewDragOver"
                                    PreviewDrop="Dia_PreviewDrop"
                                    MouseUp="Agendamento_MouseUp"
                                    MouseDown="Dia_MouseDown">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="BorderThickness" Value="0.5"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <!-- Hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#AAAAFF"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                                <Setter Property="Background" Value="#FF515151"/>
                                                <!-- opcional, leve realce -->
                                            </Trigger>
                                            <DataTrigger Binding="{Binding Selecionado}" Value="True">
                                                <Setter Property="BorderBrush" Value="#4DA3FF"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                    </Border.Style>
                                    <Grid Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <!-- Dia -->
                                        <RowDefinition Height="*"/>
                                        <!-- Lista de agendamentos -->
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{Binding Data.Day}" FontWeight="Bold"/>
                                    <ScrollViewer Grid.Row="1" 
                                            VerticalScrollBarVisibility="Auto"
                                            HorizontalScrollBarVisibility="Auto"
                                            Margin="0,0,0,0">
                                        <ItemsControl ItemsSource="{Binding Agendamentos}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border x:Name="ItemBorder"
                                                                  Margin="0,2" Padding="6,4"
                                                                  CornerRadius="6"
                                                                  Background="{Binding EstaPago, Converter={StaticResource PagoParaCor}}"
                                                                  MouseDown="Agendamento_MouseDown"
                                                                  PreviewMouseDown="ItemBorder_PreviewMouseRightButtonDown"
                                                                  Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                                                        <Border.ContextMenu>
                                                            <!-- Faz o DataContext do menu ser o PlacementTarget (o Border) -->
                                                            <ContextMenu DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}">
                                                                <!-- Editar -->
                                                                <MenuItem Header="Editar…"
                                                                    Command="{Binding Tag.EditarAgendamentoCommand}"          
                                                                    CommandParameter="{Binding DataContext}" />
                                                                <!-- Pagamentos -->
                                                                <MenuItem Header="Pagamentos"
                                                                        Command="{Binding Tag.PagamentosAgendamentoCommand}"          
                                                                        CommandParameter="{Binding DataContext}" />
                                                            </ContextMenu>
                                                        </Border.ContextMenu>
                                                        <Grid>
                                                            <StackPanel Orientation="Horizontal" Margin="6,0,0,0"
                                                                        Cursor="Hand" PreviewMouseMove="Agendamento_PreviewMouseMove">
                                                                <TextBlock Text="{Binding Horario, StringFormat=\{0:hh\\:mm\}}"/>
                                                                <TextBlock Text="-" Margin="6,0"/>
                                                                <TextBlock Text="{Binding Cliente.Nome}" MaxWidth="120" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                                                <Ellipse Width="10" Height="10" 
                                                                                  Stroke="White"
                                                                                  StrokeThickness="1"
                                                                         Fill="{Binding Servico.Id, Converter={StaticResource ServicoIdToBrush}}" 
                                                                         Margin="10,0,15,0"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>

                                                    <DataTemplate.Triggers>
                                                        <Trigger SourceName="ItemBorder" Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#4DA3FF"/>
                                                            <Setter Property="Opacity" Value="0.6"/>
                                                            
                                                        </Trigger>
                                                        <DataTrigger Value="True">
                                                            <DataTrigger.Binding>
                                                                <MultiBinding Converter="{StaticResource IdEqualsConverter}">
                                                                    <Binding Path="Id"/>
                                                                    <!-- id do agendamento deste card -->
                                                                    <Binding Path="DataContext.AgendamentoSelecionadoIdFiltro"
                                                                     RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                </MultiBinding>
                                                            </DataTrigger.Binding>
                                                            <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#4DA3FF"/>
                                                            <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2"/>
                                                        </DataTrigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
        

        <Border x:Name="Drawer"
              Background="#333"
              Width="200"
            HorizontalAlignment="Left"
                  Margin="0,50,0,0"
                  VerticalAlignment="Stretch"
                  RenderTransformOrigin="0,0"
              d:RenderTransformOrigin="0,0">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="DrawerTransform" X="-200" d:X="0"/>
                </Border.RenderTransform>

                <StackPanel Margin="10">
                    <TextBlock Text="Legenda de serviços"
                         Foreground="White"
                         FontWeight="Bold"
                         FontSize="14"
                         Margin="0,0,0,8"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding GlossarioServicos}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <!-- Ajuste ItemWidth/Height se preferir 2 colunas -->
                                    <WrapPanel ItemWidth="170" MinWidth="170"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:ServicoLegenda}">
                                    <Border Background="#1AFFFFFF"
                                          CornerRadius="8"
                                          Padding="8"
                                          Margin="0,4,0,4">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="12" Height="12"
                                               Fill="{Binding Cor}"
                                               Stroke="White" StrokeThickness="1"
                                               Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Nome}"
                                 Foreground="White"
                                 FontSize="12"/>
                                    </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Dica/rodapé opcional -->
                    <TextBlock Text="* As cores identificam o tipo de serviço."
                             Foreground="#CCFFFFFF"
                             FontSize="11"
                             Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        <ToggleButton x:Name="btnToggle" Content="☰" Width="40"
                  HorizontalAlignment="Left" VerticalAlignment="Top"  
                  Margin="10" Height="40" 
                  Checked="btnToggle_Checked" Unchecked="btnToggle_Unchecked"/>

    

        <!-- Overlay da modal de PAGAMENTOS (por cima de tudo) -->
        <Grid x:Name="PagamentosOverlay"
      Visibility="{Binding MostrarPagamentos, Converter={StaticResource BoolToVisibilityConverter}}"
      Background="#80000000"
      d:Visibility="Collapsed"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Panel.ZIndex="9999"
      IsHitTestVisible="True">
            <Grid.InputBindings>
                <KeyBinding Key="Escape" Command="{Binding FecharPagamentosCommand}"/>
            </Grid.InputBindings>

            <!-- Centro da modal -->
            <Border HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Background="#2F2F2F"
          CornerRadius="12"
          Padding="16"
                    Margin="40,20,0,0"
          Width="1000"
          Height="780">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header com botão fechar -->
                    <DockPanel Grid.Row="0" LastChildFill="False">
                        <TextBlock Text="Pagamentos" Foreground="White" FontSize="18" FontWeight="Bold"/>
                        <Button Content="✕"
                            Command="{Binding FecharPagamentosCommand}"
                            DockPanel.Dock="Right"
                            Margin="8,0,0,0"
                            Width="50" Height="40"
                            Background="#E53935"
                            Foreground="White"
                            BorderThickness="0"/>

                    </DockPanel>

                    
                    <controles:PagamentosControl Grid.Row="1"  DataContext="{Binding PagamentosVM}"/>
                </Grid>
                
            </Border>
            <Border HorizontalAlignment="Right" Width="300" Height="900"
            Background="White"
            Visibility="{Binding MostrarHistoricoCliente,Converter={StaticResource BoolToVisibilityConverter}}">
                <ContentControl HorizontalContentAlignment="Right"
                                Width="300"
                                Content="{Binding TelaHistoricoCliente}"/>
            </Border>

        </Grid>
        <Grid Visibility="{Binding MostrarEditarAgendamento, Converter={StaticResource BoolToVisibilityConverter}}"
      Background="#80000000"
      Panel.ZIndex="9998">
           
            <Border Background="#2F2F2F" CornerRadius="12" Padding="16" Width="1000" Height="650"
            HorizontalAlignment="Center" VerticalAlignment="Center">
                <ContentControl Content="{Binding TelaEditarAgendamento}" />
                
            </Border>
            <DockPanel Grid.Row="0" LastChildFill="False">
                <Button Content="✕" FontSize="22" HorizontalAlignment="Center"
              Command="{Binding FecharEdicaoCommand}"
              DockPanel.Dock="Top"
              Margin="940,40,0,0" VerticalAlignment="Center"
              Width="60" Height="50"
              Background="#E53935"
              Foreground="White"
              BorderThickness="0"/>

            </DockPanel>

        </Grid>


    </Grid>
</Window>
