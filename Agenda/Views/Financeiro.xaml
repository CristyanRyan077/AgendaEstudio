<Window x:Class="AgendaNovo.Views.Financeiro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgendaNovo.Views" xmlns:viewmodels="clr-namespace:AgendaNovo.ViewModels" xmlns:hc="https://handyorg.github.io/handycontrol" d:DataContext="{d:DesignInstance Type=viewmodels:FinanceiroViewModel}"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Financeiro" Height="450" Width="800">
    <Grid Background="#2F2F2F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <!-- filtros -->
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
            <!-- conteúdo -->
        </Grid.ColumnDefinitions>

        <!-- Filtros -->
        <StackPanel Grid.Column="0" Background="#3A3A3A">
            <TextBlock Text="Filtros" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
            <StackPanel>
                <TextBlock Text="Período" Foreground="#DDD"/>
                <DatePicker SelectedDate="{Binding PeriodoInicio}" Margin="0,4,0,6"/>
                <DatePicker SelectedDate="{Binding PeriodoFim}" Margin="0,0,0,10"/>
                <Button Content="Mês atual" Command="{Binding QuickMesAtualCommand}" Margin="0,0,0,10"/>

                <Button Content="Aplicar" Command="{Binding CarregarCommand}" />
            </StackPanel>
            <Button Content="Exportar para Excel" Background="Green"
                    FontFamily="Helvetica" FontWeight="Bold"
                    Command="{Binding ExportarParaExcelCommand}" Margin="0,28,0,0" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Conteúdo -->
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- KPIs -->
                <TextBlock Text="Agendamentos" Margin="8,10,0,0" FontSize="22" FontFamily="Helvetica" Foreground="White"/>
                <UniformGrid Columns="3" Margin="0,0,0,12">
                    <Border CornerRadius="10" Background="#424242" Padding="12" Margin="6">
                        <StackPanel>
                            <TextBlock Text="Receita bruta" Foreground="#BBB"/>
                            <TextBlock Text="{Binding ReceitaBruta, StringFormat=R$ {0:N2}}" 
                      Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="10" Background="#424242" Padding="12" Margin="6">
                        <StackPanel>
                            <TextBlock Text="Recebido" Foreground="#BBB"/>
                            <TextBlock Text="{Binding Recebido, StringFormat=R$ {0:N2}}" 
                      Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="10" Background="#424242" Padding="12" Margin="6">
                        <StackPanel>
                            <TextBlock Text="Em aberto" Foreground="#BBB"/>
                            <TextBlock Text="{Binding EmAberto, StringFormat=R$ {0:N2}}" 
                      Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="10" Background="#424242" Padding="12" Margin="6">
                        <StackPanel>
                            <TextBlock Text="% Recebido" Foreground="#BBB"/>
                            <TextBlock Text="{Binding PercRecebido, StringFormat={}{0}%}" 
                      Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="10" Background="#424242" Padding="12" Margin="6">
                        <StackPanel>
                            <TextBlock Text="Ticket médio" Foreground="#BBB"/>
                            <TextBlock Text="{Binding TicketMedio, StringFormat=R$ {0:N2}}" 
                      Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="10" Background="#424242" Padding="12" Margin="6">
                        <StackPanel>
                            <TextBlock Text="Agendamentos" Foreground="#BBB"/>
                            <TextBlock Text="{Binding QtdAgendamentos}" 
                      Foreground="White" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                <TextBlock Text="Produtos" Margin="8,0,0,0" FontSize="22" FontFamily="Helvetica" Foreground="White"/>
                <UniformGrid Columns="1" Margin="0,0,0,12">
                    <Border CornerRadius="10" Background="#424242" Padding="12" Margin="0">
                        <StackPanel Orientation="Horizontal">

                            <StackPanel Margin="6,0,0,0">
                                <TextBlock Text="Receita bruta" Foreground="#BBB"/>
                                <TextBlock Text="{Binding ReceitaProdutos, StringFormat=R$ {0:N2}}" 
                                    Foreground="White" FontSize="20" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Margin="22,0,0,0">
                                <TextBlock Text="Ticket médio" Foreground="#BBB"/>
                                <TextBlock Text="{Binding TicketMedioProdutos, StringFormat=R$ {0:N2}}" 
                                    Foreground="White" FontSize="20" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Margin="22,0,0,0">
                                <TextBlock Text="Vendidos" Foreground="#BBB"/>
                                <TextBlock Text="{Binding QtdProdutos}" Margin="0,0,0,0"
                                    Foreground="White" FontSize="20" FontWeight="Bold"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </UniformGrid>
                <Border CornerRadius="12" Background="#3A3A3A" Padding="10" Margin="0,0,0,8">
                    <Border.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding CarregarCommand}"/>
                    </Border.InputBindings>
                    <DockPanel>
                        <TextBlock Text="Busca Personalizada" Foreground="White" FontWeight="Bold" FontSize="16" DockPanel.Dock="Top"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <hc:TextBox Width="300"
                        Text="{Binding FiltroClienteNome, UpdateSourceTrigger=PropertyChanged}"
                        hc:InfoElement.Placeholder="Buscar por nome do cliente"/>
                            <Button Content="Limpar" Margin="6,0,0,0"
                    Command="{Binding LimparFiltroClienteCommand}"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Resumo por serviço -->
                <Border CornerRadius="12" Background="#3A3A3A" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- título -->
                            <RowDefinition Height="*"/>
                            <!-- DataGrid preenche -->
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                     Text="Resumo por serviço"
                                     Foreground="White" FontWeight="Bold" FontSize="16"/>

                        <DataGrid
                            ItemsSource="{Binding ServicosResumo}"
                            AutoGenerateColumns="False" Width="450" MaxHeight="300"
                            CanUserAddRows="False" HorizontalAlignment="Left" Grid.Row="1"
                            Margin="0,8,0,0" RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Serviço" Binding="{Binding Servico}"/>
                                <DataGridTextColumn Header="Receita" Binding="{Binding Receita, StringFormat=R$ {0:N2}}"/>
                                <DataGridTextColumn Header="Qtd" Binding="{Binding Qtd}"/>
                                <DataGridTextColumn Header="Ticket médio" Binding="{Binding TicketMedio, StringFormat=R$ {0:N2}}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock Grid.Row="0"
                                     HorizontalAlignment="Center"
                                    Margin="50,0,0,0"
                                     Text="Resumo por Produto"
                                     Foreground="White" FontWeight="Bold" FontSize="16"/>
                        <DataGrid ItemsSource="{Binding ProdutoResumo}" MaxHeight="300"
                            AutoGenerateColumns="False" Width="400"
                            CanUserAddRows="False" HorizontalAlignment="Center" Grid.Row="1"
                            Margin="220,8,30,0" RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Serviço" Binding="{Binding Produto}"/>
                                <DataGridTextColumn Header="Receita" Binding="{Binding Receita, StringFormat=R$ {0:N2}}"/>
                                <DataGridTextColumn Header="Qtd" Binding="{Binding Qtd}"/>
                                <DataGridTextColumn Header="Ticket médio" Binding="{Binding TicketMedio, StringFormat=R$ {0:N2}}"/>
                            </DataGrid.Columns>
                            
                        </DataGrid>
                        
                    </Grid>
                </Border>

              

                <!-- Em aberto -->
                <Border CornerRadius="12" Background="#3A3A3A" Padding="10" Margin="0,0,0,12">
                    <DockPanel>
                        <TextBlock Text="Em aberto (cobranças)" Foreground="White" FontWeight="Bold" FontSize="16" DockPanel.Dock="Top"/>
                        <DataGrid EnableRowVirtualization="True" EnableColumnVirtualization="True" ItemsSource="{Binding EmAbertoLista}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                        HeadersVisibility="Column" HorizontalAlignment="Left" Margin="0,8,0,0" MaxWidth="750" MaxHeight="500" RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat=dd/MM/yyyy}"/>
                                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}"/>
                                <DataGridTextColumn Header="Serviço" Binding="{Binding Servico}"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=R$ {0:N2}}"/>
                                <DataGridTextColumn Header="Pago" Binding="{Binding ValorPago, StringFormat=R$ {0:N2}}"/>
                                <DataGridTextColumn Header="Falta" Binding="{Binding Falta, Mode=OneWay, StringFormat=R$ {0:N2}}"/>
                                <DataGridTemplateColumn Header="%" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ProgressBar Value="{Binding PercentualPago,Mode=OneWay}" Maximum="100" Height="12"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                       

                    </DockPanel>
                </Border>

               

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
