<Window x:Class="AgendaNovo.Views.SelecionarHorarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgendaNovo.Views"
        mc:Ignorable="d"
        Title="Selecionar horário" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="16" MinWidth="280">
        <TextBlock Text="Horário já ocupado. Escolha um horário livre:"
               TextWrapping="Wrap" Margin="0,0,0,8"/>
        <ComboBox x:Name="cbHorarios" MinWidth="240" Margin="0,0,0,12"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Cancelar" Margin="0,0,8,0" Click="Cancelar_Click"/>
            <Button Content="OK" IsDefault="True" Click="Ok_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
