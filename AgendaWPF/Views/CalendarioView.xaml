<UserControl x:Name="Calendario"
             x:Class="AgendaWPF.Views.CalendarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:shared="clr-namespace:AgendaShared.DTOs;assembly=AgendaShared"
             mc:Ignorable="d" xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:models="clr-namespace:AgendaWPF.Models" xmlns:viewmodels="clr-namespace:AgendaWPF.ViewModels"
             xmlns:controles="clr-namespace:AgendaWPF.Controles" xmlns:local="clr-namespace:AgendaWPF.Views"
             d:DataContext="{d:DesignInstance Type=viewmodels:CalendarioViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF333333">

        <ScrollViewer CanContentScroll="True">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>



                    <Grid Grid.Row="3" Width="240" VerticalAlignment="Bottom" Margin="0,0,20,120" Grid.Column="2" HorizontalAlignment="Right">
                    <StackPanel>
                        <controles:ClienteAutoComplete />
                    </StackPanel>
                    

                    </Grid>
                  


                   


                    <!-- Navegação -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="0,20,0,0"  Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right">
                        <Button Command="{Binding VoltarMesCommand}" Content="◀" Margin="0,0,0,0"/>
                        <TextBlock Text="{Binding MesAtual,Converter={StaticResource MesAnoPtBrConverter},  StringFormat={}{0:MMMM yyyy}}"                          
                           Foreground="White" FontWeight="Bold"
                           FontSize="18" VerticalAlignment="Center" Margin="30,0,20,0"/>
                        <Button Command="{Binding AvancarMesCommand}" Content="▶"/>
                    </StackPanel>

                    <!-- Cabeçalho dos dias -->
                    <ItemsControl Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" ItemsSource="{Binding DiasSemana}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid  VerticalAlignment="Bottom" Rows="1" Columns="7"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border 
                                BorderBrush="Transparent" 
                                BorderThickness="1"                               
                                Margin="20" 
                                Padding="0">
                                    <TextBlock 
                                Text="{Binding}" 
                                FontSize="16"
                                Foreground="White"
                                TextAlignment="Center"
                                FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
    

                <!-- Dias do mês -->
                    <ItemsControl Grid.Row="3" Margin="0,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="4" Foreground="White" ItemsSource="{Binding DiasDoMes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="7"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            
                            <DataTemplate DataType="{x:Type models:DiaCalendario}">
                                <Border x:Name="AgBorder" Height="170"   Background="#FF484848"
                                    AllowDrop="True"
                                    PreviewDragLeave="Dia_PreviewDragLeave"
                                    PreviewDragOver="Dia_PreviewDragOver"
                                    PreviewDrop="Dia_PreviewDrop"
                                    MouseUp="Agendamento_MouseUp"
                                    MouseDown="Dia_MouseDown">
                                
                                <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="Gray"/>
                                            <Setter Property="BorderThickness" Value="0.5"/>
                                            
                                            <Style.Triggers>
                                                <!-- Hover -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#AAAAFF"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Setter Property="Background" Value="#FF515151"/>
                                                    <!-- opcional, leve realce -->
                                                </Trigger>
                                                <DataTrigger Binding="{Binding Selecionado}" Value="True">
                                                    <Setter Property="BorderBrush" Value="#4DA3FF"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <!-- Dia -->
                                            <RowDefinition Height="*"/>
                                            <!-- Lista de agendamentos -->
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding Data.Day}" FontWeight="Bold"/>
                                    <Button Content="➕"
                                            Width="18" Height="28"
                                            FontSize="14"
                                            Padding="0" Tag="{Binding Data}"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Foreground="Green" Click="BtnAgenda_Click"
                                            Cursor="Hand" HorizontalAlignment="Right"
                                            ToolTip="Agendar"/>
                                    <ScrollViewer Grid.Row="1" 
                                            VerticalScrollBarVisibility="Auto"
                                            HorizontalScrollBarVisibility="Auto"
                                            Margin="0,0,0,0">

                                        <ItemsControl ItemsSource="{Binding Agendamentos}">

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border x:Name="ItemBorder"
                                                            Margin="0,2" Padding="6,4"
                                                            CornerRadius="6" Cursor="Hand"
                                                            Background="{Binding EstaPago, Converter={StaticResource PagoParaCor}}"                                                             
                                                            Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            PreviewMouseLeftButtonDown="Agendamento_PreviewMouseLeftButtonDown"
                                                            PreviewMouseMove="Agendamento_PreviewMouseMove"
                                                            PreviewMouseLeftButtonUp="Agendamento_PreviewMouseLeftButtonUp">
                                                        <Grid>
                                                            <StackPanel Orientation="Horizontal" Margin="6,0,0,0">
                                                                <TextBlock Text="{Binding Horario, StringFormat=\{0:hh\\:mm\}}"/>
                                                                <TextBlock Text="-" Margin="6,0"/>
                                                                <TextBlock Text="{Binding Cliente.Nome}" MaxWidth="120" Margin="0,0,10,0" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                                                <TextBlock Text="{Binding Crianca.Nome}" MaxWidth="120" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                                                <Ellipse  Width="10" Height="10" 
                                                                                  Stroke="White"
                                                                                  StrokeThickness="1"                                                                     
                                                                                  Margin="10,0,15,0"/>

                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>

                                                    <DataTemplate.Triggers>
                                                        <Trigger SourceName="ItemBorder" Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#4DA3FF"/>
                                                            <Setter Property="Opacity" Value="0.6"/>
                                                        </Trigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>

        <Grid x:Name="OverlayHost"
          Panel.ZIndex="99"
          Visibility="{Binding DataContext.MostrarDetalhes,
                               ElementName=Calendario,
                               Converter={StaticResource BoolToVisibilityConverter}}">

            <!-- Backdrop escurecido (clica para fechar) -->
            <Border x:Name="Backdrop"
                     Opacity="{Binding DataContext.MostrarDetalhes,
                    ElementName=Calendario,
                    Converter={StaticResource BoolToOpacity}}"
                    Background="#80000000">

                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick"
                          Command="{Binding FecharDetalhesCommand}"/>
                </Border.InputBindings>
            </Border>

       
            <Border x:Name="DetailsPane"
            Width="520"
            HorizontalAlignment="Right"
            Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
            CornerRadius="16,0,0,16"
            Padding="20"
            Effect="{DynamicResource ElevationShadow}">
                <Border.RenderTransform>
                    <TranslateTransform  X="{Binding DataContext.MostrarDetalhes,
                          ElementName=Calendario,
                          Converter={StaticResource BoolToOffset}}"/>
                </Border.RenderTransform>

                <!-- Conteúdo (subview com DataContext = AgendamentoSelecionado) -->
                <ContentControl Content="{Binding AgendamentoSelecionado}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate DataType="{x:Type shared:AgendamentoDto}">
                            <Grid>
                                <Grid.Resources>
                                    <Style x:Key="LabelTitle" TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#666"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                    <Style x:Key="ChipStyle" TargetType="Border">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="CornerRadius" Value="12"/>
                                        <Setter Property="Padding" Value="6,2"/>
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>

                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Avatar simples com iniciais -->
                                    <Border Width="72" Height="72" CornerRadius="36" Background="#FF607D8B" VerticalAlignment="Center" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Cliente.Nome}" Foreground="White" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis">

                                        </TextBlock>
                                    </Border>

                                    <!-- Resumo -->
                                    <StackPanel Grid.Column="1" Margin="12,0,12,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Cliente.Nome}" FontSize="20" FontWeight="Bold" Foreground="#111"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                            <TextBlock Text="📞" Margin="0,2,6,0"/>
                                            <TextBlock Text="{Binding Cliente.Telefone}" Margin="0,0,12,0"/>
                                            <TextBlock Text="🧾" Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding Servico.Nome}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Ações -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right">
                                        <Button Background="Red" Content="X" FontSize="16" Padding="12,0" Margin="90,0,0,10"
                                                Command="{Binding DataContext.FecharDetalhesCommand,
                                                RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CalendarioView}}}"/>
                                        <Button Background="AliceBlue" Content="✎ Editar" Width="90" Margin="0,0,0,8" />
                                        
                     
                                    </StackPanel>
                                </Grid>

                                <!-- Linha de informações importantes -->
                                <Border Grid.Row="1" Background="#F5F7FA" Padding="10" CornerRadius="6" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Vertical">
                                            <TextBlock Text="Data" Style="{StaticResource LabelTitle}"/>
                                            <TextBlock Text="{Binding Data, StringFormat={}{0:dd/MM/yyyy}}"  Margin="0,4,0,8"/>

                                            <TextBlock Text="Horário" Style="{StaticResource LabelTitle}"/>
                                            <TextBlock Text="{Binding Horario, StringFormat=\{0:hh\\:mm\}h}"  Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Vertical">
                                            <TextBlock Text="Valor" Style="{StaticResource LabelTitle}"/>
                                            <TextBlock Text="{Binding Valor, StringFormat={}R{0:C}}" Margin="0,4,0,8"/>

                                            <TextBlock Text="Pago" Style="{StaticResource LabelTitle}"/>
                                            <Border Style="{StaticResource ChipStyle}" Padding="6">
                                                <TextBlock Text="{Binding ValorPago,StringFormat={}R{0:C}}" FontSize="14" x:Name="PaymentStatusText" FontWeight="Bold"/>
                                            </Border>


                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <Border Grid.Row="2" MaxWidth="300" HorizontalAlignment="Left" Background="#F5F7FA" Padding="10" CornerRadius="6" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Vertical">
                                            <TextBlock Text="Crianca" Style="{StaticResource LabelTitle}"/>
                                            <TextBlock Text="{Binding Crianca.Nome}" FontSize="16" Margin="0,4,0,8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Vertical">
                                            <TextBlock Text="Idade" Style="{StaticResource LabelTitle}"/>
                                            <TextBlock Text="{Binding MesversarioFormatado}" Margin="0,4,0,8"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Observações -->
                                <StackPanel Grid.Row="3" Margin="0,0,0,12">
                                    <TextBlock Text="Observações" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                    <Border Background="#FFF" Padding="8" CornerRadius="6" BorderBrush="#EEE" BorderThickness="1" MaxHeight="120">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <TextBlock Text="{Binding Observacao}" TextWrapping="Wrap"/>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>

                                <!-- Tabs (Pagamentos / Histórico) -->
                                <TabControl Grid.Row="4" Margin="0">
                                    <TabItem Header="Pagamentos">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <DataGrid ItemsSource="{Binding Pagamentos}"
                                                       AutoGenerateColumns="False"
                                                       CanUserAddRows="False"
                                                       CanUserDeleteRows="False"
                                                       HeadersVisibility="Column"
                                                       Background="Transparent" BorderBrush="#DDD"
                                                       BorderThickness="1" RowHeight="36"
                                                       ColumnHeaderHeight="40"
                                                       FontSize="14" FontFamily="Segoe UI"
                                                       GridLinesVisibility="None"
                                                       SnapsToDevicePixels="True" Margin="0,0,0,8">
                                                <DataGrid.Effect>
                                                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.15"/>
                                                </DataGrid.Effect>
                                                <DataGrid.Resources>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="Background" Value="#2D89EF"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                        <Setter Property="Padding" Value="8"/>
                                                    </Style>
                                                </DataGrid.Resources>
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Data" Binding="{Binding DataPagamento, StringFormat={}{0:dd/MM/yyyy}}"/>
                                                    <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat={}{0:C}}"/>
                                                    <DataGridTextColumn Header="Método" Binding="{Binding Metodo}"/>
                                                    <DataGridTextColumn Header="Observações" Binding="{Binding Observacao}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>

                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,8,0,0">
                                                <Button Content="Adicionar" Click="AbrirPagamento" Margin="0,0,10,0" Background="Green"/>
                                                <Button Content="Apagar" Background="Red"/>
                                            </StackPanel>
                                        </Grid>
                                    </TabItem>

                                    <TabItem Header="Histórico">
                                        <TextBlock Margin="8" Foreground="#666">Histórico do cliente e alterações recentes aparecerão aqui.</TextBlock>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Border>
        </Grid>







