<UserControl x:Class="AgendaWPF.Views.EntregaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgendaWPF.Views"
             mc:Ignorable="d" xmlns:hc="https://handyorg.github.io/handycontrol"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#2F2F2F">
        <Grid.ColumnDefinitions>
            <!-- filtros -->
            <ColumnDefinition Width="210"/>
            <ColumnDefinition Width="*"/>
            <!-- conteúdo -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Grid.Column="0"  Grid.RowSpan="2" Background="#3A3A3A">
            <TextBlock Text="Filtros" Foreground="White" FontSize="16" FontWeight="Bold" Margin="10,0,0,8"/>
            <StackPanel Margin="10">
                <TextBlock Text="Período" Foreground="#DDD"/>
                <DatePicker SelectedDate="{Binding PeriodoInicio, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,6"/>
                <DatePicker SelectedDate="{Binding PeriodoFim, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="10,0,0,0" >
                    <Button Content="←" FontSize="16" Margin="0,0,10,0" Padding="0" Width="30" Command="{Binding VoltarMesCommand}"/>
                    <Button Content="Mês atual" Command="{Binding QuickMesAtualCommand}"  />
                    <Button Content="→" FontSize="16" Padding="0" Margin="10,0,0,0" Width="30" Command="{Binding AvancarMesCommand}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>



        <!-- Conteúdo -->
        <Border CornerRadius="12" Grid.Column="1" Background="#3A3A3A" Padding="10" Margin="0,0,0,8">
            <DockPanel>
                <TextBlock Text="Busca Por Nome" Foreground="White" FontWeight="Bold" FontSize="16" DockPanel.Dock="Top"/>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <hc:TextBox Text="{Binding FiltroClienteNome, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="False" Width="250" ToolTip="Tecla Enter para buscar"
                             hc:InfoElement.Placeholder="Nome do Cliente">
                        <hc:TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding CarregarCommand}"/>
                        </hc:TextBox.InputBindings>
                    </hc:TextBox>
                    <ComboBox ItemsSource="{Binding OpcoesFiltroFoto}" 
                               Margin="6,0" 
                               Width="100"
                               StaysOpenOnEdit="True" 
                               IsEditable="True" 
                               IsReadOnly="True"
                               Text="(Album/painel/Banner)">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Nome}" 
                                   IsChecked="{Binding IsSelected}"
                                   Command="{Binding DataContext.ToggleFiltroCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CardSemanal}}}"
                                   Margin="2"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Content="Limpar" Margin="6,0,0,0"
                     Command="{Binding LimparFiltroClienteCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>
        <Border Grid.Column="1" Grid.Row="1" CornerRadius="12" Background="#3A3A3A" Padding="10" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
              HorizontalAlignment="Left"
              Text="Agendamentos"
              Foreground="White" FontWeight="Bold" FontSize="16"/>

                <DataGrid Grid.Row="1"
                     ItemsSource="{Binding Agendamentos}"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     IsReadOnly="False"
                     CanUserDeleteRows="False"
                     SelectionUnit="Cell"
                     ClipboardCopyMode="ExcludeHeader"
                     HeadersVisibility="Column"
                     HorizontalAlignment="Stretch"
                     Margin="0,8,0,0"
                     MaxHeight="600"
                     RowHeaderWidth="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat=dd/MM/yyyy}" Width="90" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente.Nome}" Width="150" IsReadOnly="True" />
                        <DataGridTextColumn Header="Crianca" Binding="{Binding Crianca.Nome}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Telefone" Binding="{Binding Cliente.Telefone}" Width="100"/>
                        <DataGridTextColumn Header="Mesversario" Binding="{Binding MesversarioFormatado}" IsReadOnly="True" Width="100"/>
                        <DataGridTextColumn Header="Serviço" Binding="{Binding Servico.Nome}" Width="140" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Prazo Revelar" Binding="{Binding PrevistoRevelar, StringFormat=dd/MM}"  IsReadOnly="True"/>
                        <DataGridTextColumn Header="Prazo Entrega" Binding="{Binding PrevistoEntrega, StringFormat=dd/MM}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                        <DataGridTextColumn Header="TipoEntrega" Binding="{Binding Tipo}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
